{
  "name": "nonce-checker",
  "version": "1.0.0",
  "description": "Standalone tool to check if nonces are claimed on the Permit2 contract",
  "type": "module",
  "scripts": {
    "start": "bun ./src/index.ts",
    "dev": "bun --watch ./src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./build --target node"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.7",
    "@uniswap/permit2-sdk": "^1.3.0",
    "ethers": "^5.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3"
  }
}
